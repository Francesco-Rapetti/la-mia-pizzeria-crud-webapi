﻿@{
    ViewData["Title"] = "Custom Layout";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">
    <header class="p-4 w-100">
        <nav class="navbar navbar-expand-lg navbar-dark glass-dark fixed-top w-100">
            <div class="container-fluid">
                <a class="navbar-brand d-flex me-auto" href="@Url.Action("Index", "Home")">Pizzeria</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse w-100" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/" ? "active" : "")" aria-current="page" href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.HttpContext.Request.Path == "/Pizza" ? "active" : "")" href="@Url.Action("Index", "Pizza")">Pizzas</a>
                        </li>
                        <li>
                            <!-- Debug button -->
                            <a class="btn btn-outline-warning" href="@Url.Action("Seed", "Pizza")"><i class="fa-solid fa-bug"></i> Seed DB</a>
                        </li>
                    </ul>
                    <div class="d-flex gap-2">

                        <a class="brn btn-outline-light d-none" aria-current="page" href="@Url.Action("Index", "User")">Admin</a>
                        <!-- code omitted -->
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="glass-dark mt-auto">
        <div class="container">
            <div class="pt-3 mt-4">
                <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                    <li class="nav-item"><a href="@Url.Action("Index", "Home")" class="nav-link px-2 text-white">Home</a></li>
                    <li class="nav-item"><a href="@Url.Action("Index", "Pizza")" class="nav-link px-2 text-white">Pizzas</a></li>
                    <li class="nav-item"><a href="@Url.Action("Seed", "Pizza")" class="nav-link px-2 text-warning">SeedDB</a></li>
                    <li class="nav-item"><a href="@Url.Action("Create", "Pizza")" class="btn-outline-light btn mx-2 @(ViewContext.HttpContext.Request.Path == "/Pizza/Create" ? "disabled" : "")">New Pizza</a></li>
                </ul>
                <p class="text-center text-white m-0 p-3">© 2024 Company, Inc</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>